<h1>List of Pets</h1>

<table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Species</th>
        <th>Date Found</th>
      </tr>
    </thead>
    <tbody>      
        <% @pets.each do |pet| %>
        <tr>
            <td><%= link_to pet.name.capitalize(), pet_path(pet) %></td>   
            <td><%= pet.species.capitalize() %></td>
            <td><%= found_days_ago(pet.found_on) %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to "Add new pet", new_pet_path, class: "btn btn-primary" %>